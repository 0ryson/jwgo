---
const styles = {
  textColor: '#eee',
}
---

<style is:global define:vars={{ textColor: styles.textColor }}>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  /* width */
  ::-webkit-scrollbar {
    width: 3;
  }

  @media (min-width: 1024px) {
    ::-webkit-scrollbar {
      display: none;
      -ms-overflow-style: none; /* IE and Edge */
      scrollbar-width: none; /* Firefox */
    }
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #eee;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 5px;
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #aaa;
  }

  @layer utilities {
    @variants responsive {
      /* Hide scrollbar for Chrome, Safari and Opera */
      .no-scrollbar::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      .no-scrollbar {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
      }
    }
  }

  @font-face {
    font-family: 'Roboto';
    src: url(../fonts/roboto/Roboto-Regular.ttf) format('truetype');
    font-weight: 400;
    font-style: normal;
  }

  @font-face {
