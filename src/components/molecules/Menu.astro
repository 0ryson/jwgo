---
import BoardIcon from '../atoms/icons/BoardIcon.astro'
import HomeIcon from '../atoms/icons/HomeIcon.astro'
import MeetingsIcon from '../atoms/icons/MeetingsIcon.astro'
import TerritoriesIcon from '../atoms/icons/TerritoriesIcon.astro'

interface Routes {
  url: string
  name: string
}

const routes: Routes[] = [
  {
    url: 'home',
    name: 'Inicio',
  },
  {
    url: 'board',
    name: 'Tablero',
  },
  {
    url: 'meetings',
    name: 'Reuniones',
  },
  {
    url: 'territories',
    name: 'Territorios',
  },
]
---

<div class="py-4">
  <ul>
    {
      routes.map((route) => {
        return (
          <li class="mb-3 text-md font-medium">
            <a href={`/${route.url}`} class="flex justify-start items-center">
              <span class="inline-block pr-4">
                {route.url === 'home' && <HomeIcon size={25} />}
                {route.url === 'board' && <BoardIcon size={25} />}
                {route.url === 'meetings' && <MeetingsIcon size={25} />}
                {route.url === 'territories' && <TerritoriesIcon size={25} />}
              </span>
              <span class="inline-block">{route.name}</span>
            </a>
          </li>
        )
      })
    }
  </ul>
</div>
